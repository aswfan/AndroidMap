<?xml version="1.0" encoding="UTF-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bjmap.OsmActivity"
    tools:ignore="MergeRootFrame">
    
    <LinearLayout
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="165dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/progress"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    
    <org.osmdroid.views.MapView  
        android:id="@+id/myOSMmapview"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent" 
        tilesource="MapquestOSM"    
        android:clickable="true" 
        android:enabled="true" >      
    </org.osmdroid.views.MapView> 
    
    <com.example.bjmap.SearchBar
        android:id="@+id/searchbar"
        android:layout_above="@id/myOSMmapview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-70dp"
        android:orientation="vertical"
        android:clickable="true"
		android:focusable="true"
		android:focusableInTouchMode="true"/>
    <LinearLayout 
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:layout_marginLeft="10dp"
        >
        <Button
            android:id="@+id/clearWay"
        	android:layout_width="40dp"
        	android:layout_height="35dp"
        	android:text="返回"
        	android:textSize="12sp"
        	android:padding="0dp"
        	android:background="@drawable/marker_normal"
        	android:visibility="gone"
        	/>
        <Button
            android:id="@+id/optimize"
        	android:layout_width="40dp"
        	android:layout_height="35dp"
        	android:text="优化"
        	android:textSize="12sp"
        	android:padding="0dp"
        	android:background="@drawable/marker_normal"
        	android:visibility="gone" />
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_marginLeft="170dp"
        >
        <Button
            android:id="@+id/jiudian"
        	android:layout_width="40dp"
        	android:layout_height="35dp"
        	android:text="酒店"
        	android:textSize="12sp"
        	android:padding="0dp"
        	android:background="@drawable/marker_normal"
        	/>
        <Button
            android:id="@+id/wanle"
        	android:layout_width="40dp"
        	android:layout_height="35dp"
        	android:text="玩乐"
        	android:textSize="12sp"
        	android:padding="0dp"
        	android:background="@drawable/marker_normal"
        	/>
        <Button
            android:id="@+id/gouwu"
        	android:layout_width="40dp"
        	android:layout_height="35dp"
        	android:text="购物"
        	android:textSize="12sp"
        	android:padding="0dp"
        	android:background="@drawable/marker_normal"
        	/>
        <Button
            android:id="@+id/meishi"
        	android:layout_width="40dp"
        	android:layout_height="35dp"
        	android:text="美食"
        	android:textSize="12sp"
        	android:padding="0dp"
        	android:background="@drawable/marker_normal"
        	/>
        <Button
            android:id="@+id/jingdian"
        	android:layout_width="40dp"
        	android:layout_height="35dp"
        	android:text="景点"
        	android:textSize="12sp"
        	android:padding="0dp"
        	android:background="@drawable/marker_normal"
        	/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myOSMmapview"
        android:layout_marginTop="-120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/layout_2"
        >
        <ImageButton
	        android:id="@+id/route"
	        android:layout_width="115dp"
	        android:layout_height="105dp"
	        android:layout_marginTop="0dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/fab_big"
	        android:src="@drawable/ic_route"
	        />
     </RelativeLayout>
     
    <LinearLayout
        android:id="@+id/layout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/myOSMmapview"
        android:layout_toEndOf="@id/myOSMmapview"
        android:layout_marginStart="-55dp"
        android:layout_marginLeft="-55dp"
        android:layout_marginTop="400dp"
        android:orientation="vertical"
        >
        
        <ImageButton
	        android:id="@+id/locale"
	        android:layout_width="50dp"
	        android:layout_height="45dp"
	        android:layout_marginLeft="-10dp"
	        android:layout_marginStart="0dp"
	        android:background="@drawable/fab"
	        android:src="@drawable/locale"
	        />
        
        <ImageButton
	        android:id="@+id/myLocation"
	        android:layout_width="50dp"
	        android:layout_height="45dp"
	        android:layout_marginLeft="0dp"
	        android:layout_marginStart="0dp"
	        android:background="@drawable/fab"
	        android:src="@drawable/ic_menu_mylocation"
	        />
	    
	    <ImageButton
	        android:id="@+id/zoomin"
	        android:layout_width="50dp"
	        android:layout_height="45dp"
	        android:layout_marginLeft="0dp"
	        android:layout_marginStart="0dp"
	        android:background="@drawable/fab"
	        android:src="@drawable/ic_zoomin"
	        />
	    <ImageButton
	        android:id="@+id/zoomout"
	        android:layout_width="50dp"
	        android:layout_height="45dp"
	        android:background="@drawable/fab"
	        android:layout_marginLeft="0dp"
	        android:layout_marginStart="0dp"
	        android:src="@drawable/ic_zoomout"
	        />   
	     
     </LinearLayout>
    
    
</RelativeLayout>   