<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:headerAttr="http://schemas.android.com/apk/res/com.example.bjmap"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context="${relativePackage}.${activityClass}" >
	<RelativeLayout 
	    android:id="@+id/titleLayout_1"
	    android:layout_width="fill_parent"
    	android:layout_height="70dp"
    	android:background="@drawable/border">
	    <components.Header
	        android:id="@+id/header_1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginTop="13dp"
	        headerAttr:myTitle="出行计划"
	        headerAttr:myTitleSize="12sp"
	        headerAttr:myTitleColor="#000000"
	        headerAttr:leftBackground="#00000000"
	        headerAttr:leftSrc="@drawable/back"/>
	</RelativeLayout>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="(*)为必输项"
	    android:id="@+id/warning"
	    android:layout_below="@id/titleLayout_1"/>
	<RelativeLayout 
	    android:layout_below="@id/warning"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="20dp"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/info">
	    <TextView
	        android:id="@+id/date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="出行日期(*)"
	        android:textSize="20sp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000" />
	    <Spinner
	       	android:id="@+id/input_date"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/border"
	        android:focusable="false"
	        android:layout_below="@id/date"
	        android:layout_marginRight="10dp"
		    android:layout_marginLeft="10dp" 
		    android:layout_marginBottom="20dp"
		    android:entries="@array/date"
	         />
	    <TextView
	        android:layout_below="@id/input_date"
	        android:id="@+id/days"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="计划天数"
	        android:textSize="20sp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000" />
	    <Spinner 
	        android:layout_below="@id/days"
	       	android:id="@+id/input_days"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/border"
	        android:layout_marginLeft="10dp"
	        android:focusable="false"
	        android:layout_marginRight="10dp"
		    android:entries="@array/days" />
	    <TextView
	        android:id="@+id/people"
	        android:layout_below="@id/input_days"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="计划人数"
	        android:textSize="20sp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="5dp" 
	        android:textColor="#000000"/>
	    <Spinner
	       	android:id="@+id/input_people"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/border"
	        android:focusable="false"
	        android:layout_below="@id/people"
	        android:layout_marginRight="10dp"
		    android:layout_marginLeft="10dp" 
		    android:layout_marginBottom="20dp"
		    android:entries="@array/people"
	         />
	     <TextView
	        android:layout_below="@id/input_people"
	        android:id="@+id/fee"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="预算"
	        android:textSize="20sp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000" />
	    <Spinner 
	        android:layout_below="@id/fee"
	       	android:id="@+id/input_fee"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/border"
	        android:layout_marginLeft="10dp"
	        android:focusable="false"
	        android:layout_marginRight="10dp"
		    android:entries="@array/fee" />
	    
	    <TextView
	        android:id="@+id/type"
	        android:layout_below="@id/input_fee"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="玩法"
	        android:textSize="20sp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000" />
	    <Spinner
	       	android:id="@+id/input_type"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/border"
	        android:focusable="false"
	        android:layout_below="@id/type"
	        android:layout_marginRight="10dp"
		    android:layout_marginLeft="10dp" 
		    android:layout_marginBottom="20dp"
		    android:entries="@array/type"
	         />
	</RelativeLayout>
	
	<Button
	    android:layout_below="@id/info"
	    android:id="@+id/next_2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="下一步"
	    android:textSize="15sp"/>

</RelativeLayout>
